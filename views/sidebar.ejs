<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>.sidebar {
    width: 250px;
    height: 100vh;
    position: fixed;
    top: 0;
    left: -250px;
    background: linear-gradient(180deg, #ffffff 0%, #ffffff 50%, #ff6700 100%);
    transition: left 0.2s ease-in-out, transform 0.2s ease-in-out;
    z-index: 1000;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow-y: auto;
  }
  
  .sidebar.open {
    left: 0;
    transform: translateX(0);
  }
  
  .nav-link {
    color: #333;
    padding: 12px 20px;
    display: flex;
    align-items: center;
    font-size: 1.1rem;
    font-weight: 600;
    transition: background-color 0.7s ease, transform 0.5s ease;
  }
  
  .nav-link i {
    margin-right: 15px;
    font-size: 1.5rem;
    color: #333;
    transition: color 0.3s ease, transform 0.3s ease;
  }
  
  .nav-link:hover {
    background-color: #ff9e00;
    color: #333;
    transform: translateX(10px);
  }
  
  .nav-link:hover i {
    color: #333;
    transform: scale(1.2);
  }
  
  .nav-link.active {
    background-color: #ff6700;
    color: #ffffff;
  }
  
  .nav-link.active i {
    color: #ffffff;
  }
  
  @media (max-width: 768px) {
    .sidebar {
      width: 100%;
      left: -100%;
      top: 0;
      height: 100%;
    }
  
    .sidebar.open {
      left: 0;
    }
  
    .nav-link {
      font-size: 1.3rem;
    }
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }
  </style>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <title>Sidebar</title>
</head>
<body>
  <nav class="sidebar" id="sidebar">
    <ul>
      <li>
        <a href="/employees" class="nav-link">
          <i class="fas fa-users"></i> Employee Details
        </a>
      </li>
      <li>
        <a href="/daily-attendance" class="nav-link">
          <i class="fas fa-calendar-check"></i> Daily Attendance
        </a>
      </li>
      <li>
        <a href="/daily-purchase" class="nav-link">
          <i class="fas fa-shopping-cart"></i> Daily Purchase
        </a>
      </li>
      <li>
        <a href="/sales" class="nav-link">
          <i class="fas fa-chart-line"></i> Sales
        </a>
      </li>
      <li>
        <a href="/material" class="nav-link">
          <i class="fas fa-cubes"></i> Material
        </a>
      </li>
      <li>
        <a href="/expenses" class="nav-link">
          <i class="fas fa-wallet"></i> Expenses
        </a>
      </li>
    </ul>
  </nav>

  <script >document.addEventListener('DOMContentLoaded', function () {
    const sidebar = document.getElementById('sidebar');
  
    function toggleSidebar() {
      sidebar.classList.toggle('open');
    }
  
    // Call toggleSidebar() wherever needed, for example, on button click
    document.querySelectorAll('.nav-link').forEach((link) => {
      link.addEventListener('click', () => {
        document.querySelectorAll('.nav-link').forEach((l) => l.classList.remove('active'));
        link.classList.add('active');
      });
    });
  });
  </script>
</body>
</html>
